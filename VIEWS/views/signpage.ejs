<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login 3</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="./sign.css">
</head>
<body>
    <div class="biggie-shadow">
        <div class="container">
            <div class="login-box">
                <h1>Sign Up</h1>
                <form action="/signup" method="POST"> 
                    <div class="input-box">
                        <input type="text" required name="name">
                        <label for="name">Username</label>
                    </div>
                    <div class="input-box">
                        <input type="email" required name="email" id="email">
                        <label for="email">Email</label>
                    </div>

                    <% if(error){ %>
                    
                    <p class="para" id="msg">Account with this email already exists</p>
                   <% } %>


                    <div class="input-box">
                        <input type="password" required maxlength="8" minlength="4" name="password">    
                        <label for="password">Password</label>
                    </div>
                    <p class="link-text">
                        Forget password ?
                        <a href="#">Click Here</a>
                    </p>
                    
                    <button type="submit" class="btn">Sign Up</button>
                    
                    <p class="link-text">
                        Already have an account?
                        <a href="/login">Click Here</a>
                    </p>
                    <!-- <div class="divider">
                        <span>or</span>
                    </div> -->
                    <!-- <div class="google">
                      <button href="/auth">
                        <i class="fa-brands fa-google fa-lg" style="color: #000000;"></i>
                        <p>Sign in with Google</p>
                      </button>
                    </div>
                     -->
                </form> 
            </div>
        </div>
        <div class="bg-img">
            <img src="ride3.png" height="100%" width="90%" >
        </div>
    </div>
    
</body>


<script>
  
    const emailInput = document.getElementById('email');
    const errorMessage = document.getElementById('msg');

    
    emailInput.addEventListener('focus', function() {
        if (errorMessage) {
            errorMessage.style.display = 'none'; // Hide the error message
        }
    });
</script>
</html>