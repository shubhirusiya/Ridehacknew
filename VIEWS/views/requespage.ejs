    <style>
      /* Reset and Base Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Montserrat', sans-serif;
    background-color: #f5f7fa;
    color: #333;
}

header {
   width: 100%;
   margin: auto;
   display: flex;
   justify-content: space-between;
   align-items: center;
   box-shadow: rgba(50, 50, 93, 0.25) 0px 13px 27px -5px, rgba(0, 0, 0, 0.3) 0px 8px 16px -8px;
}

.logo {
   display: flex;
   justify-content: center;
   align-items: center;
   column-gap: 0.3rem;
   text-align: center;
   font-size: 1.7rem;
}

.logo img {
   width: 4rem;
}

nav {
   display: flex;
   column-gap: 2rem;
   font-family: "Quicksand", sans-serif;
}

nav a {
   color: black;
   font-size: 1.3rem;
   font-weight: bolder;
   text-decoration: none;
}

nav a:hover {
   color: #007BFF;
}

.login-signup-button button {
   background-color: white;
   padding: 0.5rem;
   font-size: 1rem;
   font-weight: 600;
   border-radius: 0.4rem;
}

.login-signup-button {
   padding: 2rem;
}

/* Heading Styles */
.heading {
    margin: 2rem auto;
    text-align: center;
}

.heading h1 {
    font-size: 2rem;
    color: #007BFF;
    margin-bottom: 0.5rem;
    transition: color 0.3s ease;
}

.heading h3 {
    font-size: 1.5rem;
    color: #555;
    transition: color 0.3s ease;
}

.box:hover h2 {
    color: #007BFF;
}
.box:hover{
  border:1.5px solid #007BFF;
}

/* Box and Button Layout */
.container{
  display: flex;
  justify-content: center;
}
.box {
    position: relative;
    border: 1.5px solid transparent;
    width: 90%;
    height: 150px;
    background-color: #ffffff;
    border-radius: 1rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    padding: 1.5rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.name {
    margin-bottom:40px;
    margin-left: 20px;
    display: flex;
    flex-direction: column;
}

.button {
    display: flex;
    gap: 10px;
    position: absolute;
    bottom: 20px; /* 10px above the bottom */
    right: 30px;  /* 10px from the right side */
}


button {
    background-color: #007BFF;
    color: white;
    border: none;
    border-radius: 0.5rem;
    padding: 0.5rem 1rem;
    cursor: pointer;
    font-size: 16px;
    transition: background-color 0.3s ease, transform 0.3s ease;
}

button:hover {
    background-color: #00a0ff;
}

/* Responsive Design */
@media (max-width: 768px) {
    nav {
        flex-direction: column;
    }

    .container {
        flex-direction: column;
        align-items: center;
    }

    .box {
        flex-direction: column;
        align-items: flex-start;
        height: auto;
    }

    .name {
        margin-bottom: -1rem;
    }

     .button {
        bottom: 20px; /* Keep the button 10px above the bottom */
        right: 30px; /* Adjust for smaller screen, keeping it 10px from the right */
        flex-wrap: wrap;
        width: auto;
    }

    button {
        width: 100%;
    }
}

@media (max-width: 480px) {
    .container {
        padding: 0 1rem;
    }

    .box {
        padding: 1rem;
        width: 100%;
    }

     .button {
        flex-wrap: wrap;
        bottom: 10px;
        right: 10px;
    }

    button {
        width: 30%;
    }

    .heading h1 {
        font-size: 2rem;
    }

    .heading h3 {
        font-size: 1.2rem;
    }



}

    </style>
</head>
<body>
    <header>
        <div class="logo">
          <img src="logo.jpg.jpeg" alt="no logo">
          <h3>BrainBridges</h3>
        </div>
      <nav>
        <a href="/landing_page">Home</a>
        <a href="/myprofile">My Profile</a>
        <a href="#">Messages</a>
        
        <a href="#">Info</a>
        <a href="#">About Us</a>
      </nav>
      <div class="login-signup-button">
        
      </div>
      <!-- Hamburger Menu for Mobile View -->
    <div class="hamburger" id="hamburger">
      <div></div>
      <div></div>
      <div></div>
    </div>

    <!-- Navigation -->
    <!--<nav id="navbar">-->
    <!--  <a href="#">Home</a>-->
    <!--  <a href="profile.html">My Profile</a>-->
    <!--  <a href="messages.html">Messages</a>-->
    <!--  <a href="#">Requests</a>-->
    <!--  <a href="#">Info</a>-->
    <!--  <a href="about.html">About Us</a>-->
    <!--</nav>-->

  </header>
    <div class="heading">
        <h1>Join Requests</h1>
        <h2>Powered By BrainBridges</h2>
    </div>
    
    <!-- Search Bar -->
    <!--<div class="search-container">-->
    <!--    <input type="text" id="searchBar" onkeyup="searchFunction()" placeholder="Search for names..">-->
    <!--    <button id="search-button">Search</button>-->
    <!--</div>-->

    <!-- Team Members Container -->

    <% if(!sender || sender.length===0){ %>
        <div class="noreq" style="font-family: Quicksand, sans-serif; font-size: 30px; margin-top: 200px; margin-left: 600px;"><p>No pending join requests</p></div>
    <% } %>
    <div class="container" id="teamContainer">

        
      



        <% sender.forEach(function(i){ %>
        <div class="box">
          <div class="name">
            <p><strong><%= i.sender_name %></strong> sended you a join request</p>
            <p><strong><%= i.team_name%></strong>
          </div>
            
          <!--<p>Backend Developer</p>-->
          <div class="button">
            <button class="accept-button" onclick="handleclick('<%= i.sender_id %>','<%= i.receiver_id %>','<%= i.team_id %>','accepted')">Accept</button>
            <button class="decline-button " onclick="handleclick('<%= i.sender_id %>','<%= i.receiver_id %>','<%= i.team_id %>','rejected')">Decline</button>
          </div>
            
        </div>

        <% }); %>
        

    <script>


function handleclick(senderid,receiverid,team_id,action) {

    
    
            fetch('/response', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    sender_id: senderid,
                    receiver_id: receiverid,
                    team_id:team_id,
                    action: action
                })
        
                
            })

            
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    const notificationItem = document.getElementById(`notification-${senderId}`);
                    if (notificationItem) {
                        notificationItem.remove();
                    } else {
                        console.error('Notification item not found');
                    }
                   
                } else {
                    alert('Error: ' + data.message);
                }
            })
            .catch(error => {
                console.error('Error:', error);
            });

            
        }
       
       
    </script>
</body>
</html>